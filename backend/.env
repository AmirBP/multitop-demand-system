# ============================================================================
# CONFIGURACIÓN BASE DE DATOS
# ============================================================================

# ============= BASE DE DATOS (LocalDB) =============
DATABASE_URL=Driver={ODBC Driver 17 for SQL Server};Server=(localdb)\MSSQLLocalDB;Database=MultitopDemand;Trusted_Connection=Yes;

# Si tienes instalado el 18, cambia el nombre del driver:
# DATABASE_URL=Driver={ODBC Driver 18 for SQL Server};Server=(localdb)\MSSQLLocalDB;Database=MultitopDemand;Trusted_Connection=Yes;Encrypt=No;

# (Opcional) solo si luego te conectas a la BD origen:
# MULTITOP_DATABASE_URL=Driver={ODBC Driver 17 for SQL Server};Server=SERVIDOR\INSTANCIA;Database=ERP_MULTI;Trusted_Connection=Yes;


# Pool de conexiones
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Configuración de aplicación
ENVIRONMENT=development
LOG_LEVEL=INFO
OUTPUT_DIR=./outputs
STORE_DIR=./outputs/store
EXPORT_DIR=./outputs/exports
LOG_DIR=./outputs/logs
ALLOW_ORIGINS=["*"]